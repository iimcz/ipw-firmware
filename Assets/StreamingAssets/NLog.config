<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target name="logfile" xsi:type="File" fileName="${basedir}/emt_sdk.log" />
    <target name="logconsole" xsi:type="Console" />
    <target name="logmethod" xsi:type="MethodCall" className="Assets.Scripts.NLogLoaderComponent, Assembly-CSharp" methodName="LogUnity">
            <parameter layout="${level}" />
            <parameter layout="${message}" />
      </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="logconsole" />
    <logger name="*" minlevel="Debug" writeTo="logfile" />
    <logger name="*" minlevel="Debug" writeTo="logmethod" />
  </rules>
</nlog>
